<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style parent="Theme.Netverify" name="CustomNetverifyTheme">
    <item name="colorControlNormal">#ff8000</item> <!-- Color of the action icons on the menu bar -->
    <item name="colorPrimary">#FAFAFA</item> <!-- Menu bar -->
    <item name="colorPrimaryDark">#4A4A4A</item> <!-- Phone information bar -->
    <item name="android:textColor">#000000</item> <!-- Font color in main screen -->
    <item name="jumio_toolbarStyle">@style/Jumio.Actionbar.Title</item> <!-- added to overwrite the text color on the header -->
    <item name="android:fontFamily">"sans-serif"</item>
    <item name="colorAccent">#FF8000</item> <!-- ORANGE HUE -->
    <item name="bam_scanOverlay">#C70039</item> <!-- RED HUE -->
    <item name="bam_scanBackground">#900C3F</item> <!-- RED VIOLET HUE -->
    <item name="netverify_scanOverlay">#40C7C7C7</item> <!-- PASSPORT Overlay 25% opacity -->
    <item name="netverify_scanBackground">#B3C7C7C7</item> <!-- Scan Background CARD 70% opacity -->
    <item name="netverify_scanOverlayTemplateValid">#FF8000</item> <!-- GRAY HUE -->
    <item name="netverify_scanOverlayTemplateInvalid">#E83C18</item> 
    <item name="netverify_scanOverlayDetectedLine">#000000</item> <!-- Passport Scan Overlay Color  -->
    <item name="netverify_scanOverlayDetectedLineStroke">#FF8000</item> <!-- YELLOW HUE -->
    <item name="netverify_scanOverlayLivenessValid">#FF8000</item> <!-- Valid face  -->
    <item name="netverify_scanOverlayLivenessInvalid">#E83C18</item> <!-- Invalid Face -->
    <item name="netverify_scanOverlayLivenessBackground">#B3C7C7C7</item> <!-- FACE DETECTION / Liveness -->
    <item name="netverify_scanOverlayLivenessText">#4A4A4A</item> 
    <item name="netverify_scanOptionsLoadingBackground">#FF8000</item> <!-- button color when capture is success / Loading bg-->
 
      <!-- scan instructions specific colors -->
  
    <item name="netverify_helpBackground">#FAFAFA</item>
    <item name="netverify_helpProgressString">#4a4a4a</item>
    <item name="netverify_helpTitle">#4a4a4a</item>
    <item name="netverify_helpImage">#4a4a4a</item>
    <item name="netverify_helpInstructions">#4a4a4a</item> 
    
    <item name="netverify_confirmationBackground">#fafafa</item>
    <item name="netverify_confirmationHintStyle">@style/Custom.Netverify.Confirmation.Hint</item>
    <item name="netverify_confirmationPositiveStyle">@style/Netverify.Confirmation.MaterialButton</item>
    <item name="netverify_confirmationNegativeStyle">@style/Netverify.Confirmation.MaterialButton.Outlined</item>
    
    <!-- submission error (error screen) specific colors -->
    <item name="netverify_submissionErrorStatusBar">#c8c8c8</item>
    <item name="netverify_submissionErrorBackground">#fafafa</item>
    <item name="netverify_submissionErrorTitle">#4a4a4a</item>
    <item name="netverify_submissionErrorDescription">#4a4a4a</item>
    <item name="netverify_submissionErrorSeperator">#4a4a4a</item>
    <item name="netverify_submissionErrorImage">#ff8000</item>
    <item name="netverify_submissionErrorButtonBackground">#FF8000</item>
    <item name="netverify_submissionErrorButtonText">#ffffff</item>
    
    <!-- submission success (success screen) specific colors -->

    <item name="netverify_submissionProgressSuccessTitle">#4A4A4A</item>
    <item name="netverify_submissionProgressSuccessDescription">#4A4A4A</item>
    <item name="netverify_submissionProgressSuccessSeperator">#4A4A4A</item>
    <item name="netverify_submissionProgressSuccessImage">#FF8000</item>
    <item name="netverify_submissionProgressSuccessBackground">#FAFAFA</item>
  
  </style>
  
  <!-- actionbar title color / text header color -->

 <style name="Jumio.Actionbar.Title" parent="ThemeOverlay.AppCompat">
  <item name="android:textColorPrimary">#4a4a4a</item>
 </style>

 <!-- infobar title color -->

 <style name="Jumio.Infobar.Title" parent="@android:style/TextAppearance">
  <item name="android:textColor">#4a4a4a</item>
 </style>

 <!-- positive button theme (verification screen) -->

 <style name="Netverify.Confirmation.MaterialButton" parent="Widget.MaterialComponents.Button">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:background">#ff8200</item>
    <item name="android:textSize">36px</item>
  <!-- For API Level 21+ -->
    <item name="android:backgroundTint">#ff8000</item>
 </style>

 <!-- negative button theme (verification screen) -->

 <style name="Netverify.Confirmation.MaterialButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:textColor">#ff8000</item>
    <item name="strokeColor">#FF8000</item>
    <item name="android:textSize">36px</item>
  <!-- For API Level 21+ -->
    <item name="android:strokeColor">#ff8000</item>
 </style>
  
  <!-- Verification info theme (verification screen) -->

 <style name="Custom.Netverify.Confirmation.Hint" parent="Netverify.Confirmation.Hint">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    <item name="android:background">#fafafa</item>
    <item name="android:textColor">#4a4a4a</item>
 </style>
  
  <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay">
    <item name="colorPrimary">#EB984E</item> <!-- ORANGE HUE -->
    <item name="colorPrimaryDark">#FF8000</item> <!-- ORANGE HUE previously #73C6B6 possible light button-->
    <item name="colorAccent">#273746</item> <!-- DARK BLUE HUE -->
    <item name="android:textColor">#000000</item>
  </style>

  <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay">
    <item name="colorPrimary">#FF8000</item> 
    <item name="colorPrimaryDark">#FF8000</item> <!-- previously #16A085 possible dark button -->
    <item name="colorAccent">#FF8000</item> <!-- possible circle progress -->
    <item name="android:textColor">#000000</item>
  </style>
  
</resources>
